<!doctype html> 
<html> 
    <head> 
        <title>Video Test</title> 
        <meta http-equiv="Content-Type" content="text/html;charset=utf-8"> 
        <script type="text/javascript" src="assets/flowplayer-3.1.4.min.js"></script>
    </head> 
    <body> 
        <a href="video?index=$index%26width=$width%26height=$height" 
            style="display:block;width:${width}px;height:${player_h}px"  
            id="player"></a>
        <script> 
            flowplayer("player", "assets/flowplayer-3.1.5.swf", { 
                    clip:  { 
                                url: 'video?index=$index%26width=$width%26height=$height',
                                autoPlay: false, 
                                autoBuffering: true,
                                scaling: 'fit' 
                           }
                       }); 
        </script>
    </body>
</html>
